{% extends 'base.html.twig' %}

{% block title %}Détails de l'équipe {{ team.name }}{% endblock %}

{% block body %}
    <h1>Détails de l'équipe {{ team.name }}</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ team.position }}</td>
            </tr>
            <tr>
                <th>Enigme actuelle</th>
                <td>{{ team.currentEnigma }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ team.note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_index') }}" class="btn btn-secondary">Retour à la liste</a>

    <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
