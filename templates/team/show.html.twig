{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Détails de l'équipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ team.creationDate ? team.creationDate|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_index') }}">Retour à la liste</a>

    <a href="{{ path('app_team_edit', {'id': team.id}) }}">Modifier</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
