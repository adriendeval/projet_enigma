{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			{# <div class="mb-3 alert alert-info">
				Vous êtes connecté en tant que
				<b>{{ app.user.userIdentifier }}</b>. Voulez-vous vous <a href="{{ path('app_logout') }}">déconnecter</a> ?
			</div> #}
			{# Redirection vers la page d'accueil #}
			{% do app.response.redirectToRoute('app_home') %}
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">Connexion en tant qu'enseignant ou administrateur</h1>
		<div class="form-floating mb-3">
			<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" placeholder="Email" required autofocus>
            <label for="username">Email</label>
		</div>
		<div class="form-floating mb-3">
			<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" placeholder="Mot de passe" required>
            <label for="password">Mot de passe</label>
		</div>
		<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

		{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
		            See https://symfony.com/doc/current/security/remember_me.html #}

		<div class="checkbox mb-3">
			<input type="checkbox" name="_remember_me" id="_remember_me">
			<label for="_remember_me">Se souvenir de moi</label>
		</div>

		<button class="btn btn-lg btn-primary" type="submit">
			Se connecter
		</button>
	</form>
{% endblock %}
