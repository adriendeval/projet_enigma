{% extends 'base.html.twig' %}

{% block title %}Détails de l'image n°{{ thumbnail.id }}{% endblock %}

{% block body %}
    <h1>Détails de l'image n°{{ thumbnail.id }}</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ thumbnail.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ thumbnail.image }}</td>
            </tr>
            <tr>
                <th>Information / Note explicative</th>
                <td>{{ thumbnail.information }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_thumbnail_index') }}" class="btn btn-secondary">Retour</a>

    <a href="{{ path('app_thumbnail_edit', {'id': thumbnail.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('thumbnail/_delete_form.html.twig') }}
{% endblock %}
