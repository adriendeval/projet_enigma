{% extends 'base.html.twig' %}

{% block title %}Détails du jeu {{ game.title }}{% endblock %}

{% block body %}
    <h1>Détails du jeu {{ game.title }}</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>Message de bienvenue</th>
                <td>{{ game.welcomeMessage }}</td>
            </tr>
            <tr>
                <th>Image de bienvenue</th>
                <td>{{ game.welcomeImage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}" class="btn btn-secondary">Retour à la liste</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}" class="btn btn-primary">Modifier</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
