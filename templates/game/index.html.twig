{% extends 'base.html.twig' %}

{% block title %}Liste des jeux{% endblock %}

{% block body %}
    <h1><i class="bi bi-dice-3-fill"></i> Liste des jeux</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Message de bienvenue</th>
                <th>Image de bienvenue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.title }}</td>
                <td>{{ game.welcomeMessage }}</td>
                <td>{{ game.welcomeImage }}</td>
                <td>
                    <a href="{{ path('app_game_show', {'id': game.id}) }}" class="text-secondary">Afficher</a>
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}" class="text-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun jeu trouv√©...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_new') }}" class="btn btn-primary">Nouveau jeu</a>
{% endblock %}
