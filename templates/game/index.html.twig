{% extends 'base.html.twig' %}

{% block title %}Liste des parties{% endblock %}

{% block body %}
	<h1>Liste des parties</h1>

	<table class="table">
		<thead>
			<tr>
				{% if is_granted('ROLE_ADMIN') %}
					<th>Actions</th>
				{% endif %}
			</tr>
		</thead>
		<tbody>
			{% for game in games %}
				<tr>
					<td>{{ game.id }}</td>
					<td>
						<a href="{{ path('app_game_show', {'id': game.id}) }}">Détails</a>
						<a href="{{ path('app_game_edit', {'id': game.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="2">Aucune partie trouvée. Cliquez sur le bouton ci-dessous pour en créer une.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_game_new') }}" class="btn btn-primary">Nouvelle partie</a>
{% endblock %}
